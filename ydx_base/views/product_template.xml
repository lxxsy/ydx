<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="Relevant Document" name="relevant_document">
                    <field name="attachment_id">
                        <tree string="Relevant Document">
                            <field name="name"/>
                            <button type="object" name="display_ir_attachment_window"
                                    class="oe_highlight" string="Details">
                            </button>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//label[@for='standard_price']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='standard_price_uom']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <group name="bill" position="attributes">
                <attribute name="groups">purchase.group_purchase_user</attribute>
            </group>
        </field>
    </record>


</odoo>